# -*- mode: Shell-script-*-

#
# Linux specific settings
#

## DEFUNS

## ENV
if [ -z $BASH_COMPLETION ]
then
    export BASH_COMPLETION="/etc/bash_completion"
fi

export EXTRA_PROMPT_COMMAND=change_title

## ALIASES

# redefine ls
alias ls='ls -lh --color="auto"'

# use a shorter name for ack-grep
alias ack='ack-grep'
