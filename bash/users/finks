# -*- mode: Shell-script-*-

#
# Settings for the machine 'finks'
#

## ENV

export _DOCS=${HOME}/Documents
export WORKSPACE=${_DOCS}/workspace

# Python path
export PYTHONPATH=~/Documents/workspace/stuff/:${PYTHONPATH}

# Closure compiler (for JavaScript)
export CLOSURE_COMPILER=${WORKSPACE}/closure-compiler/compiler.jar


## DEFUNS

set_term_bgcolor() {
    /usr/bin/osascript <<EOF
tell application "Terminal" to set current settings of first window to settings set named "Remote"
EOF
}

reset_term_bgcolor() {
    /usr/bin/osascript <<EOF
tell application "Terminal" to set current settings of first window to settings set named "Pro"
EOF
}

ssh_color() {
    set_term_bgcolor
    ssh "$@"
    reset_term_bgcolor
}

## ALIASES

# common dirs
alias gostuff="cd ${WORKSPACE}/stuff"
alias goalgs="cd ${WORKSPACE}/algorithms"
alias gores="cd ${_DOCS}/resume"
alias gocovers="cd ${_DOCS}/resume/covers-$(year)"
alias gospace="cd $WORKSPACE"

# ssh with color
alias ssh="ssh_color"
